generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url = "DATABASE_URL"
}


model User {
  id Int @id @default(autoincrement()) @map("userId")
  username String @default("John Cena") @db.VarChar(100)
  email String @default("johncena@gmail.com") @db.VarChar(100)
  password String 
  picture String? @default("my image")
  recentJob String? @default("Frontend Developer") @db.VarChar(100)
  workAt String? @default("Apple") @db.VarChar(100)
  experience String? @default("0 Year") @db.VarChar(100)
  resident String? @default("Jakarta, Indonesia") @db.VarChar(100)
  postedjobs Job[]
  // savedJobs Job[]
  // appliedJobs Job[]
  @@unique([email])
}

model JobDetail {
   id Int @id @default(autoincrement())
   location String @default("Jakarta")
   position String @default("Remote")
   type String @default("Fulltime")
   salaryRange String @default("$1K")
   job Job @relation(fields: [jobId], references: [id])
   jobId Int @unique
}

model Job {
   id Int @id @default(autoincrement()) @map("jobId")
   companyName String @default("Apple")
   companyPicture String @default("company picture")
   role String @default("Frontend Developer")
   requirements String[]
   responsibilities String[]
   description String @default("Our company is the best")
   createdAt DateTime @default(now())
   detail JobDetail?
   author User? @relation(fields: [authorId], references: [id])
   authorId Int
}